n <- 10
m <- c()
for (ii in 1:k) {
  m <- c( m, mean( rbinom(n, size = 1, prob = 1/2 ) ) )
}
m
@
\end{frame}

\begin{frame}[containsverbatim]
  \frametitle{La convergence vers la loi normale}

<<echo=correction>>=
